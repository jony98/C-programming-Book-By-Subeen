<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar">
    </include>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_marginTop="20dp"
           android:gravity="center_horizontal"
           android:layout_gravity="center_horizontal"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#000"
               android:fontFamily="@font/solaimanlipi"
               android:textSize="25sp"
               android:gravity="center_horizontal"
               android:textStyle="bold"
               android:text="সি প্রোগ্রামিং"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="#000"
               android:fontFamily="@font/solaimanlipi"
               android:textSize="16sp"
               android:gravity="center_horizontal"
               android:layout_marginBottom="30dp"
               android:textStyle="bold"
               android:text="লেখক তামিম শাহ্‍‍রিয়ার সুবিন"/>

           <Button
               android:id="@+id/btn1"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় এক"/>

           <Button
               android:id="@+id/btn2"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় দুই"/>

           <Button
               android:id="@+id/btn3"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় তিন"/>

           <Button
               android:id="@+id/btn4"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় চার"/>

           <Button
               android:id="@+id/btn5"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় পাঁচ"/>

           <Button
               android:id="@+id/btn6"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় ছয়"/>

           <Button
               android:id="@+id/btn7"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় সাত"/>

           <Button
               android:id="@+id/btn8"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় আট"/>

           <Button
               android:id="@+id/btn9"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় নয়"/>

           <Button
               android:id="@+id/btn10"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:layout_marginBottom="10dp"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় দশ"/>

           <Button
               android:id="@+id/btn11"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rectangle_round_stroke_primary"
               android:textStyle="bold"
               android:textSize="20sp"
               android:clickable="true"
               android:focusable="true"
               android:layout_marginBottom="30dp"
               android:foreground="?android:attr/selectableItemBackground"
               android:fontFamily="@font/solaimanlipi"
               android:text="অধ্যায় এগার"/>

       </LinearLayout>
   </ScrollView>

</LinearLayout>